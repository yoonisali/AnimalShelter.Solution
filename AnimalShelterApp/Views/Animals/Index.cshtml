@{
    Layout = "_Layout";
}

@using AnimalShelterApp.Models;

<div class="container">
  <div class="text-center">
        <h1 class="pt-3">Animals</h1>

        @if (@Model.Count == 0)
        {
            <h3 class="pt-3">No animals have been added yet!</h3>
        }
        <div class="my-4">
            <ul class="list-group w-25 m-auto">
                @foreach (Animal animal in Model)
                {
                    <li class="list-group-item pt-2 link-text">@Html.ActionLink($"{animal.Name}", "Display", new { id = animal.Id })</li>
                }
            </ul>
        </div>

        <p class="link-text">@Html.ActionLink("Add new item!", "Create")</p>
        <p class="link-text">@Html.ActionLink("Back home!", "Index", "Home")</p>
  </div>
</div>
